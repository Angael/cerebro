{
  "compilerOptions": {
    // Base options
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    // Aliases
    "baseUrl": "./src",
    "paths": {
      "@root/*": ["*"]
    },

    // strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,

    // Transpilation
    "moduleResolution": "nodenext",
    "module": "NodeNext"
  }
}
