{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    // Base options
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    // strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,

    // Transpilation
    "moduleResolution": "nodenext",
    "module": "NodeNext",

    // Output
    "noEmit": true
  }
}
