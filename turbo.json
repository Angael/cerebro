{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist", "out", "build"]
    },
    "lint": {
      "dependsOn": ["prisma:generate", "^lint"]
    },
    "dev": {
      "dependsOn": ["serverCompose", "^prisma:generate", "^build"],
      "cache": false,
      "persistent": true
    },
    "serverCompose": {
      "cache": false,
      "persistent": false
    },
    "prisma:validate": {
      "dependsOn": ["^prisma:validate"]
    },
    "prisma:generate": {
      "dependsOn": ["^prisma:validate"]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    }
  }
}
